<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <item name="android:windowBackground">@color/activity_background_default_white</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@color/silver</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryDark">@color/default_primary_dark</item>
        <item name="colorAccent">@color/silver</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>

    </style>

</resources>