<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_primary"
    tools:context="com.gabrielgatu.allaround.fragments.DiscussionDetailFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:text="..."/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true">

        <com.makeramen.RoundedImageView
            android:id="@+id/author_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/user_no_photo"
            android:scaleType="centerCrop"
            app:corner_radius="30dip"
            app:border_width="1dip"
            app:border_color="@color/white"
            app:mutate_background="true"
            app:oval="true" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:text="Eddie Labanovwski"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/author_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/author_name"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="Aug 25"/>

    </RelativeLayout>

</RelativeLayout>